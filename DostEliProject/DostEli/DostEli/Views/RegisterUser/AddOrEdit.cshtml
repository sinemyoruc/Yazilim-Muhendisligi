@model DostEli.Models.Table_User

@{
    ViewBag.Title = "Kayıt";
}

@using (Html.BeginForm("AddOrEdit", "RegisterUser", FormMethod.Post))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h3>KAYIT OL</h3>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
